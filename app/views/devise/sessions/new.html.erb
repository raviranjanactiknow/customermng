<section class="login-page">
  <div class="split left">
      <div class="centered">
        <img src="https://www.w3schools.com/howto/img_avatar2.png" alt="Avatar woman">
        <h2>Login to Employee Management</h2>
      </div>
  </div>
  <div class="split right">
      <div class="block login-block tbl">
        <div class="tbl-cell">
          <div class="content login-content bx-shadow">
            <h4 class="title ft-lg fw-700 login-title text-center">Login to Employee Management</h4>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email,class: "fw-600 text-left" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "v-control input-md" %>
            </div>
            <div class="form-group">
              <%= f.label :password ,class: "fw-600"%><br />
              <%= f.password_field :password, autocomplete: "current-password" ,class: "v-control input-md" %>
            </div>
            <div class="form-group">
               <%= f.submit "Log in" ,class: "v-btn v-btn-dark btn-md btn-block text-center upppercase fw-600" %>
            </div>
            <div class="form-group">
              <%= render "devise/shared/links" %>
              <strong><span class="float-left"> <a data-toggle="modal" data-target="#forgotpassword" class="ft-light ft-underline ">Forgot Password</a></span></strong>
            </div>
                <% end %>
          </div>
        </div>
        <div class="footer">
          
        </div>
    </div>
  </div>
</section>


<div class="modal fade" id="forgotpassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Forgot Password</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
         </div>
         <div class="modal-body">
            <form>
               
               <div class="row form-group align-items-center">
                  <label class="col-md-4">Email Id</label>
                  <div class="col-md-8">
                     <input type="text" name="" class="v-control input-xs" placeholder="">
                  </div>
               </div>
               
               
            </form>
         </div>
         <div class="modal-footer">
            <button type="button" class="v-btn v-btn-dark btn-sm   btn-shadow" data-dismiss="modal">Close</button>
            <button type="button" class="v-btn v-btn-primary btn-sm btn-shadow">Send</button>
         </div>
      </div>
   </div>
</div>    


