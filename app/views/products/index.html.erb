                 <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                 <% end %>
                 <!-- Delete Button showing the modal Start-->
                 <a data-toggle="modal" data-target="#exampleModal<%= prod.id %>" class="v-btn v-btn-transparent ft-primary icon icon-xs uppercase">
                   <i
                   class="fa fa-trash "></i>
                 </a>
                 <%= render 'productmodel' ,:dep => prod %>
               </td>
             </td>
           </tr>
           <% end %>
