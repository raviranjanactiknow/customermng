<section class="wrap page-addVendors">
 <div class="row">
   <div class="col-md-9 offset-md-2">
    <div class="col-md-8">
      <%= form_tag("/employees/data_check", remote: true ,id: "exp_data") do %>
      <div class="row">
        <div class="col-md-4">
          <%= select_tag "Exprt",options_for_select(["Excel","Pdf"]),class: "v-control input-xs" %>
        </div>
        <div class="col-md-2">
          <%= submit_tag("Print",class: "v-btn v-btn-primary btn-sm no-round  btn-shadow") %>
        </div>
      </div>
      <% end %>
    </div>
    <br>
    <div class="block bx-shadow skin-light">
     <div class="content">
      <table id="example" class="table table-striped">
       <thead>
        <tr>
          <!-- <th>Emp Detail</th> -->
          <th>Salute</th>
          <th>Name</th>
          <th>Gender </th>
          <th>DOB</th>
          <th>Address</th>
          <th>Salary</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
       <% @employees.each do |emp| %>
       <tr>
         <% if emp.present? %>
         <td><%= emp.salute %></td>
         <td><%= emp.name %> </td>
         <td><%= emp.sex %></td>
         <td><%= emp.dob.strftime("%b/%d/%Y") %></td>
         <td><%= emp.address %></td>
         <td><%= total_salary(emp.base_salary,emp.da,emp.ta) %></td>
         <% end %>
         <td>
           <%= link_to edit_employee_path(emp) ,class: 'v-btn v-btn-transparent ft-primary icon icon-xs uppercase' do %>
           <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
           <% end %>
               <!-- Delete Button showing the modal Start-->
               <a data-toggle="modal" data-target="#exampleModal<%= emp.id %>" class="v-btn v-btn-transparent ft-primary icon icon-xs uppercase">
               <i
                 class="fa fa-trash "></i>
               </a>
           <%= render 'empmodel' ,:emp => emp %>
           <!-- Delete Button shoing the model End--->
         </td>
       </td>
     </tr>
     <% end %>
   </tbody>
 </table>
</div>
